body
  div(ng-controller="homeController")
    div(class='row Panelmargin')
      div(class='row paddingRightDiv borderdashed paddingLeftDiv' ) 
        div(ng-repeat='post in posts' class='borderBottomDetail  row')
            div(class='col-md-12 rowHeight')
              span(class='title') {{post.title}}
              div(class='col-md-12 rowHeight')
                textarea(class='blogBody paddingLeftControl') {{post.body}}
                div(class='col-md-12 rowHeight')
                  span(class='detail') {{post.author}}
                  div(class='col-md-12 rowHeight detail')
                    a(ui-sref='post({id:{{post.id}}})') Comment
                    div(ui-view)
